        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/shape_btn_style3</item>
    </style>

    <!--lhy button的样式4 登陆注册，上传等按钮的样式 圆角，红底白字，白字加粗-->
    <style name="AppTheme.Widget.Btn.style4" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/selector_btn_style4</item>
    </style>

    <!--lhy:textview样式1 activity标题 居中 17sp 颜色494949-->
    <style name="AppTheme.Widget.TV.Title" parent="AppTheme">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_494949</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--lhy search的et样式-->
    <style name="AppTheme.Widget_Et.search" parent="AppTheme">
        <item name="android:paddingStart">6dp</item>
        <item name="android:background">@drawable/shape_btn_search</item>
        <item name="android:drawableStart">@mipmap/ic_search_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">@color/color_9a9a9a</item>
        <item name="android:singleLine">true</item>
    </style>

