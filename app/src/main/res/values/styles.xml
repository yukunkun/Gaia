        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edit_text_color_hint">
        <item name="android:textColorHint">@color/text_999</item>
    </style>

    <style name="button_style_clickable" parent="button_style_un_clickable">
        <item name="android:background">@drawable/main_btn_style</item>
