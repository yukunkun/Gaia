<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/recommend_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/change_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_btn_radius_bg66a6ff"
            android:gravity="center"
            android:text="@string/change_admin"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/add_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_btn_radius_accent"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>