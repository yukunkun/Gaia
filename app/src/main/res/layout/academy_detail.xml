<?xml version="1.0" encoding="utf-8"?>
<!--kun academy detail-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/academy_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/academy_toobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@mipmap/ic_player_back" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignBottom="@id/academy_cover"
                android:background="@drawable/shape_academy_cover" />
        </RelativeLayout>
        <TextView
            android:id="@+id/academy_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="12dp"
            android:textColor="@color/color_494949"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            >
            <RatingBar
                android:id="@+id/room_ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />
                <TextView
                    android:id="@+id/grade_academy"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_ff5773"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/learn_number"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff5773"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/learn_num"
                    android:textColor="@color/text_666"
                    android:textSize="12sp"
                    android:textStyle="bold" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/learn_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/color_ff5773"
                android:textSize="13sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/start_learn"
                android:padding="6dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_learn"
                android:layout_marginRight="12dp"
                android:text="@string/stare_study"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
</LinearLayout>