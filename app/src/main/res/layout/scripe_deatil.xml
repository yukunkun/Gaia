<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/scripe_detail_cover"
        android:scaleType="centerCrop"
        android:src="@mipmap/personal_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/scripe_detail_back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_script_back"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_academy_cover"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/scripe_detail_lin"
        android:text="连载中"
        android:textColor="@color/color_33bbff"
        android:background="@drawable/shape_script_lianzai"
        android:textSize="9sp"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="16dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/scripe_detail_name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_494949"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/scripe_detail_head"
                    android:src="@mipmap/ic_avatar_default"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/scripe_detail_editor"
                        android:textColor="@color/text_999"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/scripe_detail_theme"
                        android:textColor="@color/text_999"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/scripe_detail_read"
                        android:textColor="@color/text_999"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/scripe_detail_price"
                        android:textColor="@color/color_ff5773"
                        android:textSize="15sp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:layout_marginTop="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/scripe_detail_add_group"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_width="0dp">
            <ImageView
                android:src="@mipmap/ic_script_add_n"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/about_us_line"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:id="@+id/scripe_detail_coll"
            android:layout_height="match_parent"
            android:layout_width="0dp"

            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/scripe_detail_heart"
            android:layout_width="match_parent"
            android:text="95"
            android:gravity="center"
            android:src="@mipmap/ic_script_like_n"
            android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/about_us_line"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:id="@+id/scripe_detail_share"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:text="95"
                android:gravity="center"
                android:src="@mipmap/ic_script_share_n"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:text="引言"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_494949"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.ms.square.android.expandabletextview.ExpandableTextView
       android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:id="@+id/expand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandableTextView:maxCollapsedLines="3"
        expandableTextView:animDuration="200">
        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            android:ellipsize="end"
            android:textColor="@color/text_666" />
        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"/>
    </com.ms.square.android.expandabletextview.ExpandableTextView>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:text="大纲"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_494949"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.ms.square.android.expandabletextview.ExpandableTextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:id="@+id/expand_text_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandableTextView:maxCollapsedLines="3"
        expandableTextView:animDuration="200">
        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            android:ellipsize="end"
            android:textColor="@color/text_666" />
        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"/>
    </com.ms.square.android.expandabletextview.ExpandableTextView>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/ic_script_con_all"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="目录"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/color_494949"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/script_more"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="15dp" />
    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/scripe_detail_1"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="15dp"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/scripe_detail_cont_1"
           android:textColor="@color/text_666"
           android:textSize="13sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <ImageView
           android:id="@+id/scripe_detail_lock_1"
           android:src="@mipmap/ic_script_lock"
           android:layout_marginRight="10dp"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scripe_detail_2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scripe_detail_cont_2"
            android:textColor="@color/text_666"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/scripe_detail_lock_2"
            android:src="@mipmap/ic_script_lock"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scripe_detail_3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scripe_detail_cont_3"
            android:textColor="@color/text_666"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/scripe_detail_lock_3"
            android:src="@mipmap/ic_script_lock"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="27dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:text="剧本标签"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_494949"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tag_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tag_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tag_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tag_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tag_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tag_6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scrite_detail_pinlin"
            android:text="评论"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/color_494949"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/scripe_detail_write_comm"
            android:text="写评论"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_ff5773"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.gaiamount.widgets.improved.NOScrolledListView
        android:id="@+id/scripe_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>