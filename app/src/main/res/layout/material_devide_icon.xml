<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/lin"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/material_all"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/material_nav_ic_video"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:textColor="@color/color_494949"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="视频素材"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/material_light"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/material_nav_ic_template"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:textColor="@color/color_494949"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="模板素材"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>