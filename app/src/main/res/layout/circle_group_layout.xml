<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/circle_group_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/circle_name"
        android:textColor="@color/color_494949"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/circle_create"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/circle_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="17dp" />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/tag"
            android:text="From"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/color_494949"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="20sp" />
        <TextView
            android:id="@+id/circle_user"
            android:layout_toRightOf="@+id/tag"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_ff5773"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="20sp" />
        <TextView
            android:id="@+id/circle_time"
            android:textSize="10sp"
            android:textColor="@color/text_bbbbbb"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>