<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/circle_head"
        app:riv_corner_radius="4dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="15dp"
        android:layout_width="55dp"
        android:layout_height="55dp" />
    <LinearLayout
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/circle_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/action_name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/color_494949"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/action_jiaru"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:textColor="@color/color_b2b2b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/action_group_name"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginBottom="17dp"
            android:ellipsize="end"
            android:textColor="@color/text_bbbbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/action_number"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@drawable/shape_edittext_bg_coloraccent_circle"
            android:textColor="@color/white"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </LinearLayout>
</RelativeLayout>