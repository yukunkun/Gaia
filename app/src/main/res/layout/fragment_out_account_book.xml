<?xml version="1.0" encoding="utf-8"?>
<!--lhy:-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/out_account_book_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"/>

    <TextView
        android:id="@+id/accout_book_empty"
        android:layout_gravity="center"
        android:drawableTop="@mipmap/ic_account_book_empty"
        android:text="@string/no_related_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/out_account_book_total_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="总支出:--"
            android:textColor="@color/text_333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/out_account_book_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="合计:--"
            android:textColor="@color/text_333"
            android:textSize="14sp"/>
    </RelativeLayout>

</FrameLayout>