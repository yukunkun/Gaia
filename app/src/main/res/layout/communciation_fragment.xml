<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <!-- contact user list -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ListView
            android:scrollbars="none"
            android:divider="@color/general_background"
            android:dividerHeight="0dip"
            android:id="@+id/list_view_user_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="top"
            >
        </ListView>
        <TextView
            android:background="@color/color_d1d1d1"
            android:id="@+id/txt_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="30.0dip"
            android:visibility="invisible"/>
        <com.gaiamount.widgets.custom.MSideBar
            android:id="@+id/sild_bar"
            android:layout_width="30.0dip"
            android:background="@color/white"
            android:layout_height="fill_parent"
            android:layout_gravity="center|right"/>
         </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/contact_tishi"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_tishi"
                android:layout_width="51dp"
                android:layout_height="51dp" />
            <TextView
                android:text="@string/no_any_contact"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/sec_tishi"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>