<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical"
    tools:context=".gaia_main.settings.about_us.QuestionBackActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:onClick="QueBack"
            android:id="@+id/question_us_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:textColor="@color/about_us"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/question_return"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:onClick="SendMessage"
            android:layout_alignParentRight="true"
            android:text="@string/send_ver_code"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:background="@color/a1a1a1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:clickable="true"
        android:id="@+id/que_name"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:textColor="@color/about_us"
                android:text="@string/name"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/question_name"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:background="@color/about_us_line"
            android:layout_width="match_parent"
            android:layout_height="0.5sp" />
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/que_num"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:textColor="@color/about_us"
                android:text="@string/contact_num"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/question_num"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:background="@color/about_us_line"
            android:layout_width="match_parent"
            android:layout_height="0.5sp" />
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/que_email"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:textColor="@color/about_us"
                android:text="@string/contact_email"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/question_email"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:background="@color/about_us_line"
            android:layout_width="match_parent"
            android:layout_height="0.5sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/que_edit"
        android:paddingLeft="15dp"
        android:textColorHint="@color/text_bbbbbb"
        android:textColor="@color/about_us"
        android:textSize="12sp"
        android:hint="@string/say_something"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="left" />
    <TextView
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5sp" />
</LinearLayout>
