<?xml version="1.0" encoding="utf-8"?>
<!--lhy-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin16dp"
        android:layout_marginEnd="@dimen/margin8dp"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin16dp">

        <TextView
            android:id="@+id/personal_user_info_type1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/text_333"/>


        <ImageView
            android:id="@+id/pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/pointer_gray_right"/>

        <TextView
            android:id="@+id/personal_user_info_type1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            android:layout_toStartOf="@id/pointer"
            android:textColor="@color/text_999"/>
    </RelativeLayout>
</RelativeLayout>