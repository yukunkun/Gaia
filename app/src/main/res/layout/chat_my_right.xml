<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="22dp"
        android:id="@+id/my_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentRight="true"
            android:id="@+id/my_head"
            android:src="@mipmap/ic_avatar_default"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_toLeftOf ="@id/my_head"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:background="@drawable/shape_attention"
                android:id="@+id/my_contant"
                android:textSize="16dp"
                android:autoLink="none"
                android:textColor="@color/color_403f3f"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/imageMys"
                android:scaleType="centerCrop"
                android:layout_width="220dp"
                android:layout_height="230dp" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>