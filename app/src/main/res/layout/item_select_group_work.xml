<?xml version="1.0" encoding="utf-8"?>
<!--lhy:-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/container"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/text_light"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_chick_s"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="8sp"
                    android:textColor="@color/text_313333"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/more"
                    android:background="@mipmap/ic_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/gray_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:padding="2dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:background="@drawable/shape_tv_gray_border"
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/text_999"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/play_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:drawableStart="@mipmap/ic_eye"
                    android:textColor="@color/text_999"
                    android:textSize="9sp"/>

                <TextView
                    android:id="@+id/collect_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@mipmap/ic_like"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_999"
                    android:textSize="9sp"/>

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@mipmap/ic_talk"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_999"
                    android:textSize="9sp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>