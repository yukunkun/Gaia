<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <View
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/txt_catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="15dp"
        android:background="@color/back_all"
        android:text="A"
        android:textColor="@color/text_bbbbbb" />
    <TextView
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/user_head"
            app:civ_border_width="0.5dp"
            android:src="@mipmap/ic_avatar_default"
            app:civ_border_color="@color/about_us_line"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_head"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="@color/about_us"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>
