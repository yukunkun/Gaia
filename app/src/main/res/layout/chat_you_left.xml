<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="22dp"
        android:id="@+id/you_layout"
        android:weightSum="10"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/you_head"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/you_head"
                android:layout_width="250dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/you_content"
                    android:autoLink="none"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_attention"
                    android:textColor="@color/color_403f3f"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/imageYous"
                    android:scaleType="centerCrop"
                    android:layout_width="220dp"
                    android:layout_height="230dp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>