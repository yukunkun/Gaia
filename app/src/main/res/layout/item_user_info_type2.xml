<?xml version="1.0" encoding="utf-8"?>
<!--lhy-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginEnd="@dimen/margin8dp"
        android:layout_marginBottom="@dimen/margin8dp"
        android:layout_marginTop="@dimen/margin8dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/personal_user_info_type2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_333"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_user_info_type_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
</RelativeLayout>