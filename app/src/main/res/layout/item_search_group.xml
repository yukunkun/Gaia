<?xml version="1.0" encoding="utf-8"?>
<!--lhy:-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:makeraman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxWidth="238dp"
                android:textColor="@color/color_494949"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/group_sub_title_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_title"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:lines="1"
                android:textColor="@color/color_9a9a9a"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/group_sub_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/group_title"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:maxWidth="238dp"
                android:textColor="@color/color_494949"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/group_cover"
                android:layout_width="match_parent"
                android:src="@mipmap/group_top_bg"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="22dp"
                android:scaleType="centerCrop"
                makeraman:riv_corner_radius="5dp"/>

            <TextView
                android:id="@+id/group_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_cover"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingEnd="15dp"
                android:textColor="@color/text_313333"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/group_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_followed"
                android:gravity="center_vertical"
                android:text="85"
                android:textColor="@color/text_999"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/group_video_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/group_member_count"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/ic_watch"
                android:gravity="center_vertical"
                android:text="23"
                android:textColor="@color/text_999"
                android:textSize="12sp"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>