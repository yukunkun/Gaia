<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_head"
        android:layout_margin="15dp"
        android:layout_width="54dp"
        android:clickable="true"
        android:layout_height="54dp" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_name"
                android:text="wode"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/color_494949"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/message_action"
                android:text="nide"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="60dp"
                android:textColor="@color/color_999999"
                android:layout_below="@+id/message_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/message_time"
                android:text="nide"
                android:textSize="10sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_8a8a8a"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="73dp">
            <ImageView
                android:id="@+id/message_cover"
                android:scaleType="center"
                android:background="@color/color_999999"
                android:layout_margin="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:id="@+id/message_content"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="@color/color_494949"
                android:layout_toRightOf="@+id/message_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/message_sign"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/message_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_999999"
                android:layout_toRightOf="@+id/message_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/message_text"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:maxLines="3"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/message_layout_like"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_like"
                android:text="10"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:drawableLeft="@mipmap/message_ic_like_n"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_message_circle"
                android:textColor="@color/color_a7a7a7"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/message_comment"
                android:text="10"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/message_like"
                android:textSize="10sp"
                android:drawableLeft="@mipmap/message_ic_comment"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_message_circle"
                android:textColor="@color/color_a7a7a7"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/message_share"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/message_comment"
                android:drawableLeft="@mipmap/message_ic_share"
                android:background="@drawable/shape_message_circle"
                android:textColor="@color/color_a7a7a7"
                android:layout_width="35dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_answer"
                android:textSize="10sp"
                android:gravity="center"
                android:text="回复"
                android:background="@drawable/shape_message_circle"
                android:textColor="@color/color_999999"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/message_delete"
                android:textSize="10sp"
                android:gravity="center"
                android:text="删除"
                android:layout_toRightOf="@id/message_answer"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_message_circle"
                android:textColor="@color/color_a7a7a7"
                android:layout_width="50dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <View
            android:layout_marginTop="17dp"
            android:background="@color/about_us_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</LinearLayout>