<?xml version="1.0" encoding="utf-8"?>
<!--lhy:-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.gaiamount.widgets.improved.GroupUserImageView
            android:id="@+id/member_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/cutter"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:background="@color/iv_66000000"
            android:scaleType="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/selected_icon"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="center"
            android:src="@mipmap/ic_chick_s"
            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/member_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="16dp"
        android:ems="4"
        android:lines="1"
        android:textColor="@color/text_313333"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/creations"
            android:textColor="@color/text_999"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/member_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fans"
            android:textColor="@color/text_999"
            android:textSize="10sp"/>

    </LinearLayout>

</LinearLayout>