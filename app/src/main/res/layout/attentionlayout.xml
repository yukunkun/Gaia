<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_attention"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/attent_head"
            android:layout_marginTop="17dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/color_e9e7e6"
            android:layout_gravity="center_horizontal"
            android:layout_width="68dp"
            android:layout_height="68dp" />
        <TextView
            android:id="@+id/circle_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/color_494949"
            android:layout_width="match_parent"
            android:layout_height="18dp" />
        <TextView
            android:id="@+id/circle_mes"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:textColor="@color/color_9a9a9a"
            android:layout_width="match_parent"
            android:layout_height="12dp" />
        <View
            android:layout_marginTop="15dp"
            android:background="@color/about_us_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <LinearLayout
                android:id="@+id/sixin"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="36dp">
                <ImageView
                    android:src="@mipmap/ic_sx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical"
                    android:text="@string/secret_chat"
                    android:textSize="12dp"
                    android:textColor="@color/color_494949"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/about_us_line"
                android:layout_width="0.5dp"
                android:layout_height="36dp"/>
            <LinearLayout
                android:id="@+id/attention"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="36dp">
                <TextView
                    android:gravity="center_vertical"
                    android:text="@string/have_attention"
                    android:textSize="12dp"
                    android:textColor="@color/color_9a9a9a"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>