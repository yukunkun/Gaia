<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/group_head"
            android:src="@mipmap/ic_avatar_default"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/about_us_line"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:textColor="@color/color_494949"
            android:id="@+id/group_username"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_width="239dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>