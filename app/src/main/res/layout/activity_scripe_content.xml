<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    tools:context="com.gaiamount.module_scripe.activity.ScripeContentActivity">

    <include layout="@layout/sucai_detail"/>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/lin_drawer"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/all_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_494949"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/scripe_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
