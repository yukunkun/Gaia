<?xml version="1.0" encoding="utf-8"?>
<!--lhy 创作者搜索界面-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gaia_main.search.GlobalSearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_search_et_wrapper_height">

        <EditText
            android:id="@+id/et_search"
            style="@style/AppTheme.Widget_Et.search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_search_et_height"
            android:layout_centerVertical="true"
            android:layout_marginEnd="72dp"
            android:layout_marginStart="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/action_search"
            android:imeActionId="@integer/searchActionId"
            android:imeActionLabel="@string/search"
            android:imeOptions="actionSearch"
            android:textSize="@dimen/search_hint"/>

        <Button
            android:id="@+id/btn_cancel"
            style="@style/AppTheme.Widget.Btn.style1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/cancel"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/a1a1a1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:visibility="invisible">

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</LinearLayout>
