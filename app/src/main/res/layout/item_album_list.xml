<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/bg_general"
            android:scaleType="centerCrop"
            android:id="@+id/album_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="已加密"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:id="@+id/album_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@drawable/shape_gradient_album_list"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/album_cover">

            <!--<TextView
                android:id="@+id/album_info"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_666"
            android:textSize="11sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginRight="30dp"
            android:id="@+id/album_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/album_more"
            android:layout_alignParentRight="true"
            android:src="@mipmap/command_ic_extension"
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            android:layout_height="35dp" />
    </RelativeLayout>

</LinearLayout>