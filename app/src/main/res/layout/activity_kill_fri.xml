<?xml version="1.0" encoding="utf-8"?>
<!--kun 拉黑-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.gaiamount.module_im.secret_chat.activity.KillFriActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:onClick="Kill"
                android:background="?android:attr/actionBarItemBackground"
                android:id="@+id/about_us_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:textColor="@color/about_us"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/black_list"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:background="@color/a1a1a1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <ListView
            android:id="@+id/kill_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/kill_tishi"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_tishi"
                android:layout_width="51dp"
                android:layout_height="51dp" />
            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/sec_tishi"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
