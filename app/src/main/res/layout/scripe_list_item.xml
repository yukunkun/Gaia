<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_scripe_circle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:background="@drawable/shape_scripe_tag"
        android:id="@+id/scripe_tag"
        android:textSize="9sp"
        android:textColor="@color/white"
        android:layout_width="40dp"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/scripe_title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/color_494949"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/scripe_content"
        android:lines="8"
        android:ellipsize="end"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/text_999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="15dp"
        android:background="@color/about_us_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scripe_show"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/color_ff5773"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/scripe_time"
            android:textSize="10sp"
            android:textColor="@color/color_8a8a8a"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="15dp"
        android:background="@color/about_us_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scripe_look"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_watch_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/scripe_look"
            android:id="@+id/scripe_like"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_like_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/scripe_more"
            android:visibility="gone"
            android:src="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </RelativeLayout>


</LinearLayout>