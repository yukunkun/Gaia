<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:background="@drawable/shape_comment"
    android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:padding="10dp"
            android:textColor="@color/text_333"
            android:text="获得作者授权,您将阅读全部的内容"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textSize="13sp"
        android:padding="20dp"
        android:textColor="@color/text_999"
        android:text="@string/shouquan"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <include layout="@layout/gray_line"/>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/comment_dialog_grade_cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="@string/cancel"
                android:textColor="@color/color_007aff"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/text_b1b1b1"/>

            <Button
                android:id="@+id/comment_dialog_grade_ok"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="发送授权申请"
                android:textColor="@color/color_007aff"/>
        </LinearLayout>
</LinearLayout>