<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/real_back"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/scripe_head"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/scripe_head"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scripe_name"
            android:textSize="12sp"
            android:text="123456"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_ff5773"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/scripe_intro"
            android:textSize="10sp"
            android:text="123456"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginTop="13dp"
            android:singleLine="true"
            android:textColor="@color/text_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/scripe_attent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        android:text="关注"
        android:gravity="center"
        android:textColor="@color/color_ff5773"
        android:background="@drawable/shape_attention_att"
        android:layout_width="52dp"
        android:layout_height="28dp" />
</RelativeLayout>