<?xml version="1.0" encoding="utf-8"?>
<!--lhy-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="81dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/sec_head"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/about_us_line"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_494949"
                    android:id="@+id/sec_username"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text=""
                    android:layout_marginRight="60dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/sec_time"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:text=""
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sec_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/color_8a8a8a"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/cishu"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:background="@drawable/shape_im_backage"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="14dp"
                    android:layout_height="15dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:background="@color/about_us_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>