<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gaiamount.module_user.notes.NotesListActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/notes_toobar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:navigationIcon="@mipmap/back"
        android:layout_height="@dimen/toolbar_default_height">
        <TextView
            android:id="@+id/notes_title"
            android:text="手记"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/about_us"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <View
        android:background="@color/a1a1a1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/notes_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
